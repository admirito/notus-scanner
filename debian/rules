#!/usr/bin/make -f
# See debhelper(7) (uncomment to enable)
# output every command that modifies files on the build system.
#export DH_VERBOSE = 1

export PYBUILD_NAME=notus-scanner

override_dh_auto_test:
	true

override_dh_auto_install:
	dh_auto_install

	mkdir -p debian/notus-scanner/lib/systemd/system
	sed -e 's|/usr/local/bin|/usr/bin|g' -e 's|\(ExecStart=/usr/bin/notus-scanner\)|\1 -l/var/log/gvm/notus-scanner.log -LINFO --products-directory=/var/lib/notus/products/|' config/notus-scanner.service > debian/notus-scanner/lib/systemd/system/notus-scanner.service

%:
	dh $@ --with python3 --buildsystem=pybuild
